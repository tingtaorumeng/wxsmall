page,.mycontainer{
  width: 100%;
  height: 100%;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
}

.mycontainer{
  display: flex;
  flex-direction: column;
}

.nav{
  height: 44px;
}
.nav ul{
  display: flex;
}
.nav li{
  flex:1;
  box-sizing: border-box;
  line-height: 44px;
  height: 44px;
  text-align: center;
}

.nav li.active{
  border-bottom: 2px solid #14c145;
}

.myswiper{
  flex:1;
}
.myscroll{
  width: 100%;
  height: 100%;

}

.myscroll .box{
  display: flex;
  padding: 10px;
}

.myscroll image{
  width: 128px;
  height: 200px;
}

.filminfo{
  padding-left: 10px;
  flex: 1;
}
.filminfo view{
  margin-bottom: 10px;
}
.filminfo .label{
  margin-right: 5px;
  color: #666;
}
.filminfo .rating{
  color: #14c145;
}
.filmtitle{
 font-size: 18px;
 margin-right: 10px;
}
.filmyear{
  font-size: 16px;
  color: #999;
}